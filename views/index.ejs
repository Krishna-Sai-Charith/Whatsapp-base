<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Whatsapp</title>
</head>
<body>
    <h3>All chats</h3>
    <form action="/chats/new" method="GET">
        <button>New Chat</button>
    </form>
    <br>
    
<%for(let chat of chats){%>
    <div class="chat">
        <p>From: <%=chat.from%></p>
        <p>To: <%=chat.to%></p>
        <div class="message">
            <p>Message: <%=chat.message%></p>
            <form method="get" action="/chats/<%= chat._id %>/edit">
                <button>Edit</button>
            </form>
            <form method="Post" action="/chats/<%= chat._id %>?_method=DELETE">
                <button>Delete</button>
            </form>
            <p>Created at: <%=chat.created_at.toString().split(" ")[4]%></p>
            <p>Created at: <%=chat.created_at.toString().split(" ").slice(0,4).join(" ")%></p>
        </div>
        <hr>
    </div>
 <%}%>
</body>
</html>
